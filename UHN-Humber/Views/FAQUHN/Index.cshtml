@model UHN_Humber.Models.faqModel

@{
    ViewBag.Title = "UHN FAQ";
    Layout = "~/Views/Shared/_PublicView.cshtml";
}

<h2 style="margin-top: 50px; margin-bottom: 30px; font-size: 25px;">Frequently Asked Questions</h2>


<style>

    #faqlist li{
        background-color: #337ab7;
    }
    #faqlist li:hover{
        background-color: #5abbff;
    }

    #faqlist a{
                color: white;
                 border: none;
    }

    #faqlist a.active{
           background-color: #5abbff;
           border: none;
    }

    #faqlist a:hover{
           background-color: #5abbff;
           border: none;
           cursor: pointer;
    }


    #tempDiv{
        background-image: none;
        
    }
</style>


<div id="tempDiv">

    <ul id="faqlist" class="nav nav-tabs nav-justified" style="margin-top:30px ;">

        <li role="presentation"><a class="active">All</a></li>


        @foreach (var item in Model.modelOne)
        {
                <li role="presentation">@Html.ActionLink(item.faq_category_name, "displayQList", new { categoryid = item.faq_category_id })</li>
        }

    </ul>


</div>


<style>
    h3 {
        position: relative;
        display: block;
        font: bold 14px/19px "Ubuntu", sans-serif;
        text-transform: uppercase;
        margin: 0;
        padding: 15px;
        color: #333333;
    }

        h3 span {
            float: right;
            cursor: pointer;
        }

    p {
        color: #6f6f6f;
        font: normal 14px/18px "Ubuntu", sans-serif;
        display: block;
        width: 90%;
        margin-left: auto;
        margin-right: auto;
        padding: 10px;
    }

    #faq-list {
        border: 1px solid #dedede;
        padding: 20px 30px;
    }
    h4{
            font: bold 20px/30px "Ubuntu", sans-serif;
    color: #333333;
    text-transform: uppercase;
    padding: 0 0 16px 0;
    margin: 30px 0 30px 0;
    border-bottom: 1px solid #e4e4e4;
    }

        @@media screen and (min-width: 992px) {
        p{
            display: none;
        }


    }


    }
</style>

<script>

    $(document).ready(function () {
        $("h3 span").click(function () {
            if ($(this).hasClass('glyphicon-menu-down')) {
                $(this).parent().next().show();
                $(this).removeClass('glyphicon-menu-down');
                $(this).addClass('glyphicon-menu-up');
            }
            else {
                $(this).parent().next().hide();
                $(this).removeClass('glyphicon-menu-up');
                $(this).addClass('glyphicon-menu-down');
            }
        });
    });
</script>

<div id="faq-list" style="margin-bottom: 50px; ">

    @foreach (var item in Model.modelOne)
    {
        <h4>@item.faq_category_name</h4>

        foreach (var item2 in Model.modelTwo)
        {

            if (item2.faq_question_category == item.faq_category_id)
            {
            <h3>
                @item2.faq_question_question<span class="hidden-sm hidden-xs glyphicon glyphicon-menu-down" aria-hidden="true"></span>
            </h3>
            <p>@item2.faq_question_answer</p>
                }
                else
                { }
            }
        }

</div>








