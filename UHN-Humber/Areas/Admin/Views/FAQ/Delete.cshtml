@model UHN_Humber.Models.FAQCategory


@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-bottom: 50px;">Frequently Asked Questions</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FAQ Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Category Name: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FAQCategoryName)
        </dd>

        <dt>
            <b>Sort Order: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FAQCategoryOrder)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" style="background-color: white;" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
