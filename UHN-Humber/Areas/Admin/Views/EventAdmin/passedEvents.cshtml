@model IEnumerable<UHN_Humber.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Events</h2>

<p>
    <span style="border:1px solid #30a5ff; padding: 4px;">@Html.ActionLink("All Events", "Index")</span>&nbsp;&nbsp;
    <span style="border:1px solid #30a5ff; padding: 4px;">
        @Html.ActionLink("Past Events", "passedEvents")
    </span>&nbsp;&nbsp;
    <span style="border:1px solid #30a5ff; padding: 4px;">
        @Html.ActionLink("Upcoming Events", "upcomingEvents")
    </span>
    <span style="float:right;">@Html.ActionLink("Create New Event", "Create")</span>
</p>
<table class="table" style="table-layout: fixed;">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
            Time
        </th>
        <th>
            Location
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td>
                @String.Format("{0:d}", item.EventDate)


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
            </td>
        </tr>
    }

</table>
